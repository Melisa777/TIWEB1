@using modelos;
@{ 
    List<Profesor> profesores = (List<Profesor>)ViewBag.ListadoProfesores;
    int id_profesor = 0;
}

<div class="row">
    <div class="col-xs-12 col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading c-list">
                <span class="title">Lista Profesores</span>

            </div>
            <!--Lista de los profesores!!! -->
            <ul class="list-group" id="contact-list">
                @foreach (var profe in profesores)
                {
                    <li class="list-group-item">
                        <div class="col-xs-12 col-sm-3">
                            <img src="http://api.randomuser.me/portraits/men/49.jpg" alt="Scott Stevens" class="img-responsive img-circle">
                        </div>
                        <div class="col-xs-12 col-sm-9">
                            <span class="name">@profe.Nombres @profe.Apellidos</span><br>
                            <span>@profe.Abstract</span>

                            <div>
                                <a href="#">
                                    <span class="glyphicon glyphicon-open text-muted c-info" onclick="verDatosProfesor(@profe.ID_Profesor)"></span>
                                </a>
                                <a href="#">
                                    <span class="glyphicon glyphicon-edit text-muted c-info" onclick="editarDatosProfesor(@profe.ID_Profesor)"></span>
                                </a>
                                
                                <a href="#">
                                    <span class="glyphicon glyphicon-remove text-muted c-info" onclick="borrarDatosProfesor(@profe.ID_Profesor)"></span>
                                </a>
                            </div>
                            
                        </div>
                        <div class="clearfix"></div>
                    </li>
                }
                
            </ul>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 text text-center">
        <span class="title">Profesor: </span>
            <div class="row">
                <div class="main-login main-center">
                    <form class="form-horizontal" method="post" action="#">

                        <div class="col-md-12">
                            <div class="col-md-6 form-group">
                                <label for="name" class="cols-sm-2 control-label">Ingrese su nombre</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="name" id="name" placeholder="Ingrese su nombre" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 form-group">
                                <label for="email" class="cols-sm-2 control-label">Ingrese su apellido</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="email" id="email" placeholder="Enter your Email" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-6 form-group">
                                <label for="username" class="cols-sm-2 control-label">Ingrese su correo</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="username" id="username" placeholder="Enter your Username" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="password" class="cols-sm-2 control-label">Ingrese su telefono</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                        <input type="password" class="form-control" name="password" id="password" placeholder="Enter your Password" />
                                    </div>
                                </div>
                            </div>
                        </div>
                       <div class="col-md-12">
                           <div class="col-md-6 form-group">
                               <label for="confirm" class="cols-sm-2 control-label">Ingrese su dni</label>
                               <div class="cols-sm-10">
                                   <div class="input-group">
                                       <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                       <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Confirm your Password" />
                                   </div>
                               </div>
                           </div>
                           <div class="col-md-6 form-group">
                               <label for="confirm" class="cols-sm-2 control-label">Ingrese su dirección</label>
                               <div class="cols-sm-10">
                                   <div class="input-group">
                                       <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                       <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Confirm your Password" />
                                   </div>
                               </div>
                           </div>
                       </div>
                        <div class="col-md-12">
                            <div class="col-md-6 form-group">
                                <label for="confirm" class="cols-sm-2 control-label">Ingrese su dni</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                        <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Confirm your Password" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="confirm" class="cols-sm-2 control-label">Ingrese su dirección</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                        <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Confirm your Password" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary login-button">Register</button>
                    </form>
                </div>
            </div>
        </div>
</div>

<script>
    function verDatosProfesor(id_profe) {
        alert("se visualizará los datos");
    }

    function editarDatosProfesor(id_profe) {
        alert("se editará los datos");
    }
    function borrarDatosProfesor(id_profe) {
        alert("se borrará los datos");
    }
</script>